<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_ocean"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="343dp"
            android:layout_height="213dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            app:srcCompat="@drawable/fish_title" />

        <ImageButton
            android:id="@+id/ib_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_play"
            app:srcCompat="@drawable/button_play" />

        <ImageButton
            android:id="@+id/ib_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_credit"
            app:srcCompat="@drawable/button_credit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>